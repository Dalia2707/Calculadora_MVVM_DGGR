<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora_MVVM_DGGR.Trigger.Page1"
             xmlns:vm="clr-namespace:Calculadora_MVVM_DGGR.ViewModel">
    <ContentPage.BindingContext>
        <vm:VMcalculadora />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Definir estilos aquí -->
            <Style x:Key="SelectedOperatorButtonStyle" TargetType="Button">
                <Style.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding selectedOperator}" Value="True">
                        <Setter Property="BackgroundColor" Value="Red" />
                        <!-- Puedes cambiar "TuColorSeleccionado" por el color deseado -->
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>